#!/usr/bin/env python


import os


PATH_DIR__THIS = os.path.abspath(os.path.dirname(__file__))
PATH_DIR__ROOT = os.path.split(PATH_DIR__THIS)[0]
PATH_DIR__DATA = os.path.join(PATH_DIR__ROOT, 'data')
PATH_DIR__DATA_SSH = os.path.join(PATH_DIR__DATA, 'ssh')

PATH_FILE__ID_RSA = os.path.join(PATH_DIR__DATA_SSH, 'id_rsa')


def main():
    if not os.path.exists(PATH_DIR__DATA_SSH):
        os.makedirs(PATH_DIR__DATA_SSH)

    if not os.path.exists(PATH_FILE__ID_RSA):
        os.system("ssh-keygen -N '' -b 2048 -f %s" % PATH_FILE__ID_RSA)
    else:
        print "Key file already exists."


if __name__ == '__main__':
    main()
